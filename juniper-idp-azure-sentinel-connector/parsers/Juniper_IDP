// Usage Instruction : 
// Paste below query in log analytics, click on Save button and select as Function from drop down by specifying function name and alias as JuniperIDP.
// Function usually takes 10-15 minutes to activate. You can then use function alias from any other queries (e.g. JuniperIDP | take 10).
// Reference : Using functions in Azure monitor log queries : https://docs.microsoft.com/azure/azure-monitor/log-query/functions
let Juniper_IDP_main_view = view () {
    JuniperIDP_CL 
    | extend
		EventVendor="Juniper",
        EventProduct="IDP",
		DvcHostname=column_ifexists('host_s', ''),
		SrcDvcType=column_ifexists('ident_s', ''),
		EventType=column_ifexists('msgid_s', ''),
		SrcDvcOs=column_ifexists('dvc_os_s', ''),
		EventEndTime=column_ifexists('event_end_time_s', ''),
		MessageType=column_ifexists('message_type_s', ''),
		SrcIpAddr=column_ifexists('source_address_s', ''),
		DstIpAddr=column_ifexists('destination_address_s', ''),
		DstPortNumber=column_ifexists('destination_port_s', ''),
		NetworkProtocol=column_ifexists('protocol_name_s', ''),
		ServiceName=column_ifexists('service_name_s', ''),
		NetworkApplicationProtocol=column_ifexists('application_name_s', ''),
		NetworkRuleNumber=column_ifexists('rule_name_s', ''),
		NetworkRulebaseName=column_ifexists('rulebase_name_s', ''),
		PolicyName=column_ifexists('policy_name_s', ''),
		ExportId=column_ifexists('export_id_s', ''),
		RepeatCount=column_ifexists('repeat_count_s', ''),
		DvcAction=column_ifexists('action_s', ''),
		EventSeverity=column_ifexists('threat_severity_s', ''),
		ThreatName=column_ifexists('attack_name_s', ''),
		SrcNatIpAddr=column_ifexists('nat_source_address_s', ''),
		SrcNatPortNumber=column_ifexists('nat_source_port_s', ''),
		DstNatIpAddr=column_ifexists('nat_destination_address_s', ''),
		DstNatPortNumber=column_ifexists('nat_destination_port_s', ''),
		NetworkDuration=column_ifexists('elapsed_time_s', ''),
		DstBytes=column_ifexists('inbound_bytes_s', ''),
		SrcBytes=column_ifexists('outbound_bytes_s', ''),
		DstPackets=column_ifexists('inbound_packets_s', ''),
		SrcPackets=column_ifexists('outbound_packets_s', ''),
		SrcZone=column_ifexists('source_zone_name_s', ''),
		SrcIntefaceName=column_ifexists('source_interface_name_s', ''),
		DstZone=column_ifexists('destination_zone_name_s', ''),
		DstInterfaceName=column_ifexists('destination_interface_name_s', ''),
		PacketLogId=column_ifexists('packet_log_id_s', ''),
		IsAlert=column_ifexists('alert_s', ''),
		DstUserName=column_ifexists('username_s', ''),
		Roles=column_ifexists('roles_s', ''),
		EventMessage=column_ifexists('msg_s', ''),
        Message=column_ifexists('Message_s', '')
       | project      
        Message,
       	TimeGenerated,
        EventVendor,
        EventProduct,
		DvcHostname,
		SrcDvcType,
		EventType,
		SrcDvcOs,
		EventEndTime,
		MessageType,
		SrcIpAddr,
		DstIpAddr,
		DstPortNumber,
		NetworkProtocol,
		ServiceName,
		NetworkApplicationProtocol,
		NetworkRuleNumber,
		NetworkRulebaseName,
		PolicyName,
		ExportId,
		RepeatCount,
		DvcAction,
		EventSeverity,
		ThreatName,
		SrcNatIpAddr,
		SrcNatPortNumber,
		DstNatIpAddr,
		DstNatPortNumber,
		NetworkDuration,
		DstBytes,
		SrcBytes,
		DstPackets,
		SrcPackets,
		SrcZone,
		SrcIntefaceName,
		DstZone,
		DstInterfaceName,
		PacketLogId,
		IsAlert,
		DstUserName,
		Roles,
		EventMessage      
};
Juniper_IDP_main_view